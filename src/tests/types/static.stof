type StaticType {
    fn hello(): str {
        return 'hello, world';
    }

    fn getX(): unknown {
        return self.x.or('default');
    }

    fn getInternal(): str {
        return StaticType::hello();
    }
}

#[test]
fn type_call() {
    let msg = StaticType::hello();
    assertEq(msg, 'hello, world');
}

#[test]
fn type_x() {
    let x = StaticType::getX();
    assertEq(x, 'default');
}

#[test]
fn internal() {
    let msg = StaticType::getInternal();
    assertEq(msg, 'hello, world');
}

sub: {
    x: 42

    #[test]
    fn type_x() {
        let x = StaticType::getX();
        assertEq(x, 42);
    }
}
