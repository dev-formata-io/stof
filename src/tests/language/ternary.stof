#[test]
fn ternary() {
    let x = 10;
    
    let y = if x > 5 ? true : false;
    assert(y);
    
    x = 3;
    y = if x > 5 ? true : false;
    assertNot(y);
}

#[test]
fn ternary_blocks() {
    let x = if true ? {
        let a = Number.abs(-34);
        return a + 10;
    } : {
        return 10;
    };
    assertEq(x, 44);
}
