#[test]
fn stringify_md() {
    const object = new {
        md: '# Title'
    };
    const text = stringify('md', object);
    drop(object);

    assert_eq(typeof text, 'str');
    assert_eq(text, '# Title');
}

#[test]
fn parse_md() {
    const text = '# Title';
    const object = new {};
    parse(text, object, format = 'md');
    
    assert_eq(object.md, '# Title');
    assert_eq(stringify('md', object), text);
    drop(object);
}

