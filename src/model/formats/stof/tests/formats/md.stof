Html: {
    #[test]
    fn markdown_to_html() {
        const md = "# Title\nList.\n- one\n- two";
        const html = Md.html(md);
        assert_eq(html, '<h1>Title</h1>\n<p>List.</p>\n<ul>\n<li>one</li>\n<li>two</li>\n</ul>');
    }
}

Json: {
    #[test]
    fn markdown_to_json() {
        const md = "# Title\nList.\n- one\n- two";
        const json = Md.json(md);
        assert_eq(json, "{\"children\":[{\"children\":[{\"type\":\"text\",\"value\":\"Title\"}],\"depth\":1,\"type\":\"heading\"},{\"children\":[{\"type\":\"text\",\"value\":\"List.\"}],\"type\":\"paragraph\"},{\"children\":[{\"children\":[{\"children\":[{\"type\":\"text\",\"value\":\"one\"}],\"type\":\"paragraph\"}],\"spread\":false,\"type\":\"listItem\"},{\"children\":[{\"children\":[{\"type\":\"text\",\"value\":\"two\"}],\"type\":\"paragraph\"}],\"spread\":false,\"type\":\"listItem\"}],\"ordered\":false,\"spread\":false,\"type\":\"list\"}],\"type\":\"root\"}");
    }
}
