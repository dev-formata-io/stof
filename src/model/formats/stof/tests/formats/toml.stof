#[test]
fn stringify_toml() {
    const object = new {
        a: 'hello',
        b: 42,
        c: true,
    };
    const toml = stringify('toml', object);
    drop(object);

    assert_eq(typeof toml, 'str');
    assert_eq(toml, 'a = "hello"\nb = 42\nc = true\n');
}

#[test]
fn parse_toml() {
    const toml = 'a = "hello"\nb = 42\nc = true\n';
    const object = new {};
    parse(toml, object, format = 'toml');
    
    assert_eq(object.a, 'hello');
    assert_eq(object.b, 42);
    assert(object.c);
    assert_eq(stringify('toml', object), toml);
    drop(object);
}

Imports: {
    import './test.toml';
    import toml './test.toml' as self.Imported;

    #[test]
    fn import_toml() {
        assert_eq(self.message, 'hello, world');
        assert_eq(self.person.name, 'Bob Smith');
        assert_eq(self.person.age, 42);

        assert_eq(self.Imported.message, 'hello, world');
        assert_eq(self.Imported.person.name, 'Bob Smith');
        assert_eq(self.Imported.person.age, 42);
    }
}
