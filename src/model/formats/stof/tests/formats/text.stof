#[test]
fn stringify_text() {
    const object = new {
        text: 'hello, there'
    };
    const text = stringify('text', object);
    drop(object);

    assert_eq(typeof text, 'str');
    assert_eq(text, 'hello, there');
}

#[test]
fn parse_text() {
    const text = 'hello, there';
    const object = new {};
    parse(text, object, format = 'text');
    
    assert_eq(object.text, 'hello, there');
    assert_eq(stringify('text', object), text);
    drop(object);
}

